<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jike.supercollection.ActivityLogin" >

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/slqb_logo" />

    <View
        android:id="@+id/user_top_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/logo_iv"
        android:layout_marginTop="40dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/user_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_top_line"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/user_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/slqb_user_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="登录名"
            android:textColor="@color/login_text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/uername_input_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:hint="请输入用户名"
            android:paddingLeft="20dp"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:id="@+id/password_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/user_rl"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/password_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_line"
        android:background="@color/white_color"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/slqb_password_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="密 码"
            android:textColor="@color/login_text_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/password_input_et"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="@null"
            android:hint="请输入密码"
            android:paddingLeft="20dp"
            android:password="true"
            android:singleLine="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/password_rl"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/password_rl"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_3"
        android:text="登 录"
        android:textColor="#FFF0F0F0"
        android:textSize="20sp" >
    </Button>

    <RelativeLayout
        android:id="@+id/autologin_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/autologin_checkbox_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/fuxuankuang_yes" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/autologin_checkbox_iv"
            android:text="自动登录"
            android:textColor="#565656"
            android:textSize="20sp" >
        </TextView>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/slqb_copy" />

</RelativeLayout>